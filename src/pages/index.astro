---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Profile from '../assets/images/arrosyid.webp';

const metadata = {
  title: 'Arrosyid Al Ayubi Website',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Beranda', href: '/' },
        { text: 'Tentang Saya', href: '#tentang' },
        { text: 'Pengalaman', href: '#pengalaman' },
        { text: 'Portfolio', href: '#portfolio' },
        { text: 'Blog', href: '#blog' },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero id="hero" title="Arrosyid Al-Ayubi" tagline="Website Pribadi">
    <Fragment slot="subtitle"> Halo, Selamat datang di website pribadi saya. </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="tentang"
    columns={4}
    items={[
      {
        icon: 'tabler:brand-instagram',
        callToAction: {
          target: '_blank',
          text: 'Instagram',
          href: 'https://www.instagram.com/arrosyid.a/',
        },
      },
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'Linkedin',
          href: 'https://www.linkedin.com/in/arrosyid-al-ayubi-b02521141/',
        },
      },
    ]}
    image={{
      src: Profile,
      alt: 'Arrosyid Al-Ayubi',
      loading: 'lazy',
      height: '500',
      width: '500',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
      <p>
        Welcome to my creative journey. My work is a testament to my commitment to bringing ideas to life, where each
        pixel becomes a brushstroke in the canvas of imagination.
      </p>
      <br />
      <p>
        I find inspiration in the world around me, whether through the pages of a captivating novel, the intricate
        details of typography, or the vibrant hues of nature during my outdoor escapades.
      </p>
      <br />
      <p>If you're curious to dive deeper into my work, you can follow me:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    id="pengalaman"
    title="Pengalaman Bekerja"
    items={[
      {
        title:
          'Wordpress Developer <br /> <span class="font-normal">PT Paket Insan Kargo, Tangerang </span> <br /> <span class="text-sm font-normal">2024</span>',
        description: `Mendesain halaman website kargopekanbaru.com. <br /> Membuat 300 halaman untuk website kargopekanbaru.com <br /> Mendisain website kargojambi.com <br /> Mengatur SEO (Search Engine Optimization) pada website kargopekanbaru.com dan kargojambi.com.`,
        icon: 'tabler:briefcase',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <Features3
    title="Skills"
    subtitle="Temukan keahlian yang memungkinkan saya menghidupkan imajinasi melalui desain."
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'Desain Grafis',
        description: 'Mahir dalam membuat desain yang menarik secara visual yang menyampaikan pesan secara efektif..',
      },
      {
        title: 'Branding and identitas',
        description: 'Terampil dalam mengembangkan identitas merek yang kohesif, termasuk logo dan pedoman merek..',
      },
      {
        title: 'Desain yang berpusat pada pengguna',
        description:
          'Berpengalaman dalam menciptakan antarmuka yang ramah pengguna dan mengoptimalkan pengalaman pengguna.',
      },
      {
        title: 'Adobe Creative Suite',
        description:
          'Terampil dalam menggunakan Photoshop, Illustrator, dan InDesign untuk membuat dan mengedit elemen visual.',
      },
      {
        title: 'Tipografi',
        description: 'Mahir dalam memilih dan memanipulasi tipografi untuk meningkatkan estetika desain.',
      },
      {
        title: 'Teori Warna',
        description: 'Mahir menggunakan warna untuk membangkitkan emosi dan meningkatkan harmoni visual.',
      },
      {
        title: 'Desain cetak dan digital',
        description: 'Berpengetahuan luas dalam merancang untuk bahan cetak dan platform digital.',
      },
      {
        title: 'Perhatian terhadap detail',
        description: 'Menjaga ketepatan dan kualitas dalam semua pekerjaan desain.',
      },
      {
        title: 'Mudah beradaptasi',
        description: 'Cepat beradaptasi dengan tren desain, teknologi, dan preferensi baru.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    id="portfolio"
    title="Portfolio"
    subtitle="Embark on a design journey that surpasses pixels, entering a realm of imagination. Explore my portfolio, where passion and creativity converge to shape enthralling visual narratives."
    isReversed
    items={[
      {
        title: 'Description:',
        description:
          'Developed a comprehensive brand identity for a tech startup, Tech Innovators, specializing in disruptive innovations. The goal was to convey a modern yet approachable image that resonated with both corporate clients and tech enthusiasts.',
      },
      {
        title: 'Role:',
        description:
          'Led the entire branding process from concept to execution. Created a dynamic logo that symbolized innovation, selected a vibrant color palette, and I designed corporate stationery, website graphics, and social media assets.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1658248165252-71e116af1b34?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=928&q=80',
      alt: 'Tech Design Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 1: <br /><span class="text-2xl">Brand identity for tech innovators</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description:
          'Designed a captivating event poster for an art and music festival, "ArtWave Fusion," aiming to showcase the synergy between visual art and music genres.',
      },
      {
        title: 'Role:',
        description: `Translated the festival's creative theme into a visually striking poster. Used bold typography, vibrant colors, and abstract elements to depict the fusion of art and music. Ensured the design captured the festival's vibrant atmosphere.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1619983081563-430f63602796?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Art and Music Poster Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 2: <br /><span class="text-2xl">Event poster for art & music festival</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description: `Redesigned the e-commerce website for an eco-conscious fashion brand, GreenVogue. The objective was to align the brand's online presence with its sustainable ethos and improve user experience.`,
      },
      {
        title: 'Role:',
        description: `Conducted a thorough analysis of the brand's values and customer base to inform the design direction. Created a visually appealing interface with intuitive navigation, highlighting sustainable materials, and integrating a user-friendly shopping experience.`,
      },
    ]}
    image={{
      src: 'https://plus.unsplash.com/premium_photo-1683288295841-782fa47e4770?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'Fashion e-commerce Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 3: <br /><span class="text-2xl">E-commerce website redesign for fashion brand</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts id="blog" title="Blog" information={`Artikel terbaru saya.`}>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
